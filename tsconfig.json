{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    // "rootDir": "./",
    // "paths": {},
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "moduleDetection": "force",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
